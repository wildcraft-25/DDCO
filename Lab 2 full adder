LAB 2 full adder 




module fa(a, b, cin, sum, cout);
input a, b, cin;
output sum, cout;

assign sum  = a ^ b ^ cin;
assign cout = (a & b) | (b & cin) | (a & cin);

endmodule
module fourbitadder(a, b, sum, c);
input  [3:0] a;
input  [3:0] b;
output [3:0] sum;
output c;

wire c1, c2, c3;

fa g0(a[0], b[0], 1'b0, sum[0], c1);
fa g1(a[1], b[1], c1,   sum[1], c2);
fa g2(a[2], b[2], c2,   sum[2], c3);
fa g3(a[3], b[3], c3,   sum[3], c);

endmodule
